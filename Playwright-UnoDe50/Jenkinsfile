pipeline {
  agent any

  stages {
    stage('Check env') {
      steps {
        bat 'where node'
        bat 'where npx'
      }
    }

    stage('Install dependencies') {
      steps {
        dir('Playwright-UnoDe50') {
          bat 'npm ci'
        }
      }
    }

    stage('Install Playwright') {
      steps {
        dir('Playwright-UnoDe50') {
          bat 'npx playwright install --with-deps'
        }
      }
    }

    stage('Run Playwright tests') {
      steps {
        dir('Playwright-UnoDe50') {
          bat 'npx playwright test'
        }
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'Playwright-UnoDe50/playwright-report/**', allowEmptyArchive: true
      // opzionale: pubblicare un report HTML se hai installato l'HTML Publisher plugin
      // publishHTML([reportDir: 'Playwright-UnoDe50/playwright-report', reportFiles: 'index.html', reportName: 'Playwright Report'])
    }
  }
}
